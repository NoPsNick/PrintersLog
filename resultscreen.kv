#:import utils kivy.utils
#:import boxlayout_with_action_bar boxlayout_with_action_bar
#:set color1 "#DD7835"
#:set color2 "#D8D8D8"

<ResultWidget>:
    BoxLayout:
        id: result_id
        size_hint_max_x: root.width
        size_hint_min_x: dp(300)
        orientation: "vertical"
        BoxLayout:
            FitLabel:
                font_size: dp(14)
                bold: True
                text: root.principal + " " + root.user + " PÁGINAS: " + str(root.paginas) + " CÓPIAS: " + str(root.copias)
            Badge:
                text: "DUPLEX" if root.duplex else ""
            Badge:
                text: "CINZA" if root.escala_de_cinza else ""
        AlignLabel:
            text: "DATA: " + root.data + " HORÁRIO: " + root.hora + " IMPRESSORA: " + root.impressora +" ARQUIVO: " + root.arquivo + " ESTAÇÃO: " + root.est
            color: utils.get_color_from_hex(color2)

<TotalWidget>:
    BoxLayout:
        id: total_id
        size_hint_max_x: root.width/2
        size_hint_min_x: dp(300)
        orientation: "vertical"
        BoxLayout:
            FitLabel:
                font_size: dp(14)
                bold: True
                text: root.user + root.arquivo + ": " + str(root.total)

<ResultScreen>:
    recycleView: recycleView
    BoxLayoutWithActionBar:
        title: "Dados Salvos"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                size_hint: 1, 0.2
                Label:
                    id: info_text
                    text_size: self.size
                    size: self.texture_size
                    halign: "right"
                    valign: "center"
                    font_size: dp(15)
                    text: "Caminho dos dados das impressoras(Aperte ENTER para salvar): " + root.printers_root
                TextInput:
                    id: printers_root
                    text: root.printers_root
                    multiline: False
                    on_text_validate: root.on_printers_root_validate(self)
                Button:
                    text: "Results"
                    on_press: root.result()
            TitleLabel:
                text: "Dados"
            BoxLayout:
                orientation: "vertical"
                id: boxlayout_principal
                padding: dp(5), dp(5)
                RecycleView:
                    id: recycleView
                    viewclass: 'ResultWidget'
                    RecycleBoxLayout:
                        default_size: None, dp(32)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: dp(self.minimum_height)
                        orientation: 'vertical'
                        spacing: dp(5)
            Label:
                text: root.msg_str
                size_hint: 1, None
                height: dp(30) if len(root.msg_str) > 0 else 0
                color: (0, 0, 0, 1)
                font_size: dp(12)
                bold: True
                canvas.before:
                    Color:
                        rgb: root.msg_col
                    Rectangle:
                        pos: self.pos
                        size: self.size
