#:import utils kivy.utils
#:import boxlayout_with_action_bar boxlayout_with_action_bar
#:set color1 "#DD7835"
#:set color2 "#D8D8D8"


<MainMenu>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(50)
            Label:
                text: 'PRINTERS LOG'
                font_size: 32
                size_hint_y: None
                height: dp(50)
        BoxLayout:
            orientation: 'vertical'
            padding: [10, 10, 10, 10]
            spacing: dp(10)
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: dp(50)
                Button:
                    text: 'Read Printers Data'
                    on_press: app.manager.push("ResultScreen")
                Button:
                    text: 'Saved data'
                    on_press: app.manager.push("SavedScreen")
                Button:
                    text: 'Configurações'
                    on_press: app.manager.push("ConfigScreen")

<SavedScreen>:
    recycleView: recycleView
    totalView: totalView
    BoxLayoutWithActionBar:
        title: "Dados"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                size_hint: 1, 0.3
                BoxLayout:
                    orientation: "vertical"
                    Label:
                        id: info_text_months
                        text_size: self.size
                        size: self.texture_size
                        halign: "left"
                        valign: "center"
                        font_size: dp(12)
                        text: "Months to see (0 to all, ENTER to validate): " + root.months
                    TextInput:
                        id: months_list
                        text: root.months_list_to_show
                        font_size: dp(12)
                        multiline: False
                        size_hint_x: 1
                        height: dp(40)  # Altura fixa
                        on_text_validate: root.on_data_validate(self)
                    Label:
                        id: info_text_years
                        text_size: self.size
                        size: self.texture_size
                        halign: "left"
                        valign: "center"
                        font_size: dp(12)
                        text: "Years to see (0 to all, ENTER to validate): " + root.years_to_show
                    TextInput:
                        id: years_list
                        text: root.years_to_show
                        font_size: dp(12)
                        multiline: False
                        size_hint_x: 1
                        height: dp(40)  # Altura fixa
                        on_text_validate: root.on_year_validate(self)
                    BoxLayout:
                        orientation: "horizontal"
                        Button:
                            text: "Pesquisar"
                            height: dp(40)
                            on_press: root.on_button_click()
                        Button:
                            text: "Pesquisar pelo Banco de Dados"
                            height: dp(40)
                            on_press: root.on_button_click_db()
            BoxLayout:
                orientation: "horizontal"
                size_hint_y: 0.7  # Ajuste o tamanho para que não ocupe muito espaço
                BoxLayout:
                    orientation: "vertical"
                    TitleLabel:
                        text: "Dados"
                    BoxLayout:
                        padding: dp(5), dp(5)
                        RecycleView:
                            id: recycleView
                            viewclass: 'ResultWidget'
                            RecycleBoxLayout:
                                default_size: None, dp(32)
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: dp(self.minimum_height)
                                orientation: 'vertical'
                                spacing: dp(5)
                BoxLayout:
                    orientation: "vertical"
                    TitleLabel:
                        text: "Totais"
                    BoxLayout:
                        padding: dp(5), dp(5)
                        RecycleView:
                            id: totalView
                            viewclass: 'TotalWidget'
                            RecycleBoxLayout:
                                default_size: None, dp(32)
                                default_size_hint: 1, None
                                size_hint_y: None
                                height: dp(self.minimum_height)
                                orientation: 'vertical'
                                spacing: dp(5)

<ResultScreen>:
    recycleView: recycleView
    BoxLayoutWithActionBar:
        title: "Dados Salvos"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                size_hint: 1, 0.2
                Label:
                    id: info_text
                    text_size: self.size
                    size: self.texture_size
                    halign: "right"
                    valign: "center"
                    font_size: dp(15)
                    text: "Printers' info root(Press enter to change): " + root.printers_root
                TextInput:
                    id: printers_root
                    text: root.printers_root
                    multiline: False
                    on_text_validate: root.on_printers_root_validate(self)
                Button:
                    text: "Results"
                    on_press: root.result()
            TitleLabel:
                text: "Dados"
            BoxLayout:
                orientation: "vertical"
                id: boxlayout_principal
                padding: dp(5), dp(5)
                RecycleView:
                    id: recycleView
                    viewclass: 'ResultWidget'
                    RecycleBoxLayout:
                        default_size: None, dp(32)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: dp(self.minimum_height)
                        orientation: 'vertical'
                        spacing: dp(5)
            Label:
                text: root.msg_str
                size_hint: 1, None
                height: dp(30) if len(root.msg_str) > 0 else 0
                font_size: dp(12)
                bold: True
                canvas.before:
                    Color:
                        rgb: root.msg_col
                    Rectangle:
                        pos: self.pos
                        size: self.size

<ConfigScreen>:
    BoxLayoutWithActionBar:
        title: "Configurações"
        BoxLayout:
            orientation: 'vertical'

            # Traduzir Section
            Label:
                text: 'Traduzir'
                size_hint: 1, 0.1

            BoxLayout:
                id: teste
                orientation: 'horizontal'
                size_hint: 1, 0.2
                TextInput:
                    hint_text: 'Data original'
                    size_hint: 0.5, 1
                TextInput:
                    hint_text: 'Data traduzida'
                    size_hint: 0.5, 1

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.1
                Button:
                    text: 'Adicionar à lista'
                    size_hint: 0.33, 1
                Button:
                    text: 'Ver a lista para editar'
                    size_hint: 0.33, 1
                    on_press: app.manager.push("ListScreen")
                Button:
                    text: 'Salvar Traduções'
                    size_hint: 0.33, 1

            # Mês e Ano Section
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.2

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 0.5, 1
                    Label:
                        text: 'Mês'
                        size_hint: 0.3, 1
                    TextInput:
                        hint_text: 'Mês'
                        size_hint: 0.7, 1

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 0.5, 1
                    Label:
                        text: 'Ano'
                        size_hint: 0.3, 1
                    TextInput:
                        hint_text: 'Ano'
                        size_hint: 0.7, 1

        Button:
            text: 'Salvar Mês e Ano'
            size_hint: 1, 0.1

        # Tipo de Banco de Dados Section
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.2
            Label:
                text: 'Tipo de Banco de Dados'
            TextInput:
                hint_text: 'Tipo de Banco de Dados'
            Button:
                text: 'Salvar Tipo de Banco de Dados'

<ListScreen>:
    BoxLayoutWithActionBar:
        title: "Lista das traduções"
        BoxLayout:
            orientation: 'vertical'

            ScrollView:
                size_hint: 1, 0.8
                GridLayout:
                    id: list_grid
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: 40
                    row_force_default: True
                    padding: 5
                    spacing: 5

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.2
                Button:
                    text: 'Aplicar'

<AlignLabel@Label>:
    text_size: self.size
    font_size: dp(self.width/55) if dp(self.width/55) < dp(10) else dp(10)
    halign: "left"
    valign: "center"
    canvas.before:
        Color:
            # rgb: utils.get_random_color()
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

<FitLabel@Label>:
    size_hint: None, None
    size: self.texture_size

<Badge@FitLabel>:
    color: 0, 0, 0, 1
    bold: True
    font_size: dp(10)
    padding: dp(8), dp(3)
    canvas.before:
        Rectangle:
            source: "images/badge.png"
            pos: self.pos
            size: self.size

<ResultWidget>:
    BoxLayout:
        id: result_id
        size_hint_max_x: root.width
        size_hint_min_x: dp(300)
        orientation: "vertical"
        BoxLayout:
            FitLabel:
                font_size: dp(14)
                bold: True
                text: root.principal + " " + root.user + " PÁGINAS: " + str(root.paginas) + " CÓPIAS: " + str(root.copias)
            Badge:
                text: "DUPLEX" if root.duplex else ""
            Badge:
                text: "CINZA" if root.escala_de_cinza else ""
        AlignLabel:
            text: "DATA: " + root.data + " HORÁRIO: " + root.hora + " IMPRESSORA: " + root.impressora +" ARQUIVO: " + root.arquivo + " ESTAÇÃO: " + root.est
            color: utils.get_color_from_hex(color2)

<TotalWidget>:
    BoxLayout:
        id: total_id
        size_hint_max_x: root.width/2
        size_hint_min_x: dp(300)
        orientation: "vertical"
        BoxLayout:
            FitLabel:
                font_size: dp(14)
                bold: True
                text: root.user + root.arquivo + ": " + str(root.total)

<TitleLabel@FitLabel>:
    font_size: dp(22)
    bold: True
    padding: dp(16), dp(3)
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex(color1)
        Rectangle:
            pos: self.pos
            size: self.size

# Telas
<ScreenManager>:
    MainMenu:
        name: "MainMenu"
        id: MainMenu
    ResultScreen:
        name: "ResultScreen"
        id: ResultScreen
    SavedScreen:
        name: "SavedScreen"
        id: SavedScreen
    ConfigScreen:
        name: "ConfigScreen"
        id: ConfigScreen
    ListScreen:
        name: "ListScreen"
        id: ListScreen