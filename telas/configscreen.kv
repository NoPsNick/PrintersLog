#:import boxlayout_with_action_bar boxlayout_with_action_bar
#:import bordered_boxlayout bordered_boxlayout

<ConfigScreen>:
    BoxLayoutWithActionBar:
        title: "Configurações"
        BorderedBoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.25
            padding: dp(5)

            # Traduzir Section
            Label:
                text: 'Traduzir (Não é recomendado alterar as traduções, pois elas alteram o programa inteiro.)'
                size_hint: 1, 0.1

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.2
                TextInput:
                    id: chave
                    hint_text: 'Data original'
                    multiline: False
                    size_hint: 0.5, 1
                TextInput:
                    id: valor
                    multiline: False
                    hint_text: 'Data traduzida'
                    size_hint: 0.5, 1

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.1
                Button:
                    text: 'Salvar Traduções Criadas na Lista'
                    size_hint: 0.33, 1
                    on_release: root.save_additions_on_translate()
                Button:
                    text: 'Ver a Lista Para Editar'
                    size_hint: 0.33, 1
                    on_release: app.manager.push("ListScreen")

        # Tipo de Banco de Dados Section (Atualizada)
        BorderedBoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.25
            padding: dp(5)

            Label:
                text: 'Banco de Dados'
                size_hint: 0.3, 1

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 0.7, 1

                ToggleButton:
                    id: db_testdb
                    text: 'Ativado'
                    group: 'db_type'
                    size_hint_x: 0.5
                ToggleButton:
                    id: db_disabled
                    text: 'Desativado'
                    group: 'db_type'
                    size_hint_x: 0.5

            Button:
                text: 'Salvar Tipo'
                size_hint: 0.2, 1
                on_release: root.save_db_type()

        # Impressoras Section
        BorderedBoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.25
            padding: dp(5)

            Label:
                text: 'Caminho Principal dos Logs'
                size_hint: 0.3, 1
            TextInput:
                id: printer_path_input
                multiline: False
                hint_text: 'Caminho dos Logs das Impressoras'
                size_hint: 0.5, 1
            Button:
                text: 'Salvar Caminho'
                size_hint: 0.2, 1
                on_release: root.save_printers_path()

        BorderedBoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.25
            padding: dp(5)

            Button:
                text: 'Alterar Documentos'
                on_release: app.manager.push("DocumentoScreen")
                size_hint: 1, 0.5
