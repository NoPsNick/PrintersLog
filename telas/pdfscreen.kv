#:import boxlayout_with_action_bar boxlayout_with_action_bar
#:import bordered_boxlayout bordered_boxlayout

<PDFScreen>:
    BoxLayoutWithActionBar:
        title: "Filtros"
        BoxLayout:
            orientation: 'horizontal'
            BorderedBoxLayout:
                padding: dp(5), dp(5)
                ScrollView:
                    size_hint: (0.70, 1)
                    do_scroll_x: True
                    do_scroll_y: True
                    pos_hint: {"center_y": 0.5}
                    GridLayout:
                        size_hint_y: None
                        cols: 1
                        height: self.minimum_height
                        Label:
                            id: preview
                            height: self.texture_size[1]
                            text_size: self.width, None
                            size_hint: 1, None
                            halign: 'left'
                            valign: 'top'
                            size: self.size
                            text: "PDF Preview"
                            on_touch_down: root.copy_text(self, *args)
            BoxLayout:
                orientation: 'vertical'
                size_hint: (0.30, 1)
                padding: [dp(5), dp(5), dp(5), dp(5)]
                pos_hint: {"center_y": 0.5}
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    padding: [dp(2), dp(2), dp(2), dp(2)]
                    height: dp(30)*4
                    Button:
                        text: 'Set Font'
                        on_release: root.show_set_font_popup()
                    Button:
                        text: 'Add Cell'
                        id: add_cell
                        disabled: True
                        on_release: root.show_add_cell_popup()
                    Button:
                        text: 'Add Multicell'
                        id: multicell
                        disabled: True
                        on_release: root.show_add_multicell_popup()
                    Button:
                        text: "Add código Python"
                        on_release: root.show_code_screen()
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    padding: [dp(2), dp(2), dp(2), dp(2)]
                    height: dp(30)
                    Button:
                        text: "Remover última adição"
                        on_release: root.remover()
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    padding: [dp(2), dp(2), dp(2), dp(2)]
                    height: dp(30)*4
                    Button:
                        text: "Estilos de PDF salvos"
                        on_release: root.pegar_pdf_popup()
                    Button:
                        text: "Pegar estilo padrão"
                        on_release: root.pegar_pdf_padrao()
                    Button:
                        text: 'Salvar estilo de PDF'
                        id: salvar
                        disabled: True
                        on_release: root.show_style_save_popup()
                    Button:
                        text: 'Gerar PDF'
                        id: gerar
                        disabled: True
                        on_release: root.show_generate_popup()
